#:kivy 2.3.0

Root:
    BoxLayout:
        orientation: 'vertical'
        DirSelectDialog:

<DirSelectDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        spacing: 5
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 5
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select"
                on_release: root.select_dir(filechooser.path, filechooser.selection)