#:kivy 2.3.0

<DirSelectDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 5
            PointedButton:
                text: "Cancel"
                on_release: root.cancel()

            PointedButton:
                text: "Select"
                on_release: root.select_dir(filechooser.path, filechooser.selection)
