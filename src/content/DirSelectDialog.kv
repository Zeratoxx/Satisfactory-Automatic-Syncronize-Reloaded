#:kivy 2.3.0
#: import SATISFACTORY_SAVED_FOLDER_PATH constants.SATISFACTORY_SAVED_FOLDER_PATH

<DirSelectDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        spacing: 10

        Label:
            id: current_path
            halign: 'left'
            valign: 'middle'
            text_size: self.width, None
            size_hint: 1, .15
#            canvas.before:
#                Color:
#                    rgba: 1, 0, 0, .3
#                Rectangle:
#                    pos: self.pos
#                    size: self.size

        StackLayout:
            id: location_selector
            size_hint: 1, .1
            LocationSelectionButton:
                text: "Home"
                on_release: root.change_drive(SATISFACTORY_SAVED_FOLDER_PATH)

        FileChooserListView:
            size_hint_y: .75
            dirselect: True
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 5
            PointedButton:
                text: "Select"
                on_release: root.select_dir(filechooser.path, filechooser.selection)
            PointedButton:
                text: "Cancel"
                on_release: root.cancel()

