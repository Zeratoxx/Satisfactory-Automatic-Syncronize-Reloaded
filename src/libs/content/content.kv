#:kivy 2.3.0

# ------------- CONTENT -------------
<Content>:
    padding: [15, 20]
    spacing: 10

    StackLayout:
        size_hint_y: 1
        size_hint_x: None
        width: 100
        # for debugging
        canvas.before:
            Color:
                rgba: 0, 1, 0, .3
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, .3
                Rectangle:
                    pos: self.pos
                    size: self.size
            pos_hint: {'x': 0}
            #size: self.size
            size_hint_y: None
            size_hint_x: 1
            text: 'Button 1'
            height: 40

    StackLayout:
        size_hint_y: 1
        size_hint_x: 1
        Button:
            pos_hint: {'x': 0}
            #size: self.size
            size_hint_y: None
            size_hint_x: None
            text: 'Button 2'
            width: 80
            height: 40
