#:kivy 2.3.0

<DirSelectDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<EditWorldsDialog>:
    RelativeLayout:
        size: root.size
        pos: root.pos

        Label:
            text: 'kek'
            size: 30, 30
            pos_hint: {'x': .5, 'y': .5}
            canvas.after:
                Color:
                    rgba: 1, 0, 0, .8
                Rectangle:
                    pos: self.pos #TODO


        BoxLayout: # TODO RecycleView here with list of worlds as data
            orientation: 'vertical'
            id: worldEditList

            Label:
                text: 'test1'
            Label:
                text: 'test2'
            Label:
                text: 'test3'

        BoxLayout:
            y: 0
            x: self.pos[0]
            size_hint_y: None
            height: 30
            Button:
                text: "Confirm"
                on_release: root.confirm()
            Button:
                text: "Cancel"
                on_release: root.cancel()
