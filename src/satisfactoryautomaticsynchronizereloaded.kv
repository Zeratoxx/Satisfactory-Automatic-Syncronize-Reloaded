#:kivy 2.3.0

BoxLayout:
    orientation: 'vertical'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        size_hint_y: 0.3
        size_hint_x: 1

        canvas.before:
            Color:
                rgba: 0, 0, .5, .7
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size

        BoxLayout:
            padding: [10, 10]

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                size_hint_y: 1
                size_hint_x: 0.3
                Image:
                    size_hint_y: None
                    size_hint_x: None
                    source: 'res/icons8-zufriedenstellend-512.png'
                    size: 128,128


            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                padding: [0, 20]
                size_hint_y: 1
                size_hint_x: 1
                Button:
                    size_hint_y: None
                    size_hint_x: 0.8
                    size: self.size
                    text: 'Button 1'

    BoxLayout:
        padding: [10, 40]
        Button: